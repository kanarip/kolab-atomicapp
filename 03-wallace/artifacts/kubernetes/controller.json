{
    "kind": "ReplicationController",
    "apiVersion": "v1",
    "metadata": {
        "name": "kolab-wallace",
        "labels": {
            "name": "kolab-wallace"
        }
    },
    "spec": {
        "replicas": 3,
        "selector": {
            "name": "kolab-wallace"
        },
        "template": {
            "metadata": {
                "labels": {
                    "name": "kolab-wallace"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "kolab-wallace",
                        "image": "$image",
                        "ports": [
                            {
                                "name": "smtp-wallace-server",
                                "containerPort": 10026
                            }
                        ]
                    }
                ]
            }
        }
    }
}

{
    "kind": "ReplicationController",
    "apiVersion": "v1",
    "metadata": {
        "name": "kolab-mta",
        "labels": {
            "name": "kolab-mta"
        }
    },
    "spec": {
        "replicas": 3,
        "selector": {
            "name": "kolab-mta"
        },
        "template": {
            "metadata": {
                "labels": {
                    "name": "kolab-mta"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "kolab-mta",
                        "image": "$image",
                        "ports": [
                            {
                                "name": "pop-server",
                                "containerPort": 110
                            },
                            {
                                "name": "imap-server",
                                "containerPort": 143
                            },
                            {
                                "name": "imaps-server",
                                "containerPort": 993
                            },
                            {
                                "name": "pops-server",
                                "containerPort": 995
                            },
                            {
                                "name": "managesieve-server",
                                "containerPort": 4190
                            },
                        ]
                    }
                ]
            }
        }
    }
}

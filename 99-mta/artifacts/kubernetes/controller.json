{
    "kind": "ReplicationController",
    "apiVersion": "v1",
    "metadata": {
        "name": "kolab-mta",
        "labels": {
            "name": "kolab-mta"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "name": "kolab-mta"
        },
        "template": {
            "metadata": {
                "labels": {
                    "name": "kolab-mta"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "kolab-mta",
                        "image": "kolab/mta",
                        "ports": [
                            {
                                "name": "smtp",
                                "containerPort": 25
                            },
                            {
                                "name": "submission",
                                "containerPort": 587
                            }
                        ]
                    }
                ]
            }
        }
    }
}
